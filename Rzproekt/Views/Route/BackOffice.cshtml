@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/css/StyleSheet.css" rel="stylesheet" />
</head>
<body class="body-back_office">
    <div id="back_office" class="wrapper">
        <div class="tab-container ">
            <h4 class="tab-title">АО "ЯПИ "Резиноасбопроект"</h4>
            <div class="tab-wrapper">

                @*ГЛАВНАЯ*@
                <input type="radio" name="tab" id="tab1" checked />
                <label class="tab-label no-select" for="tab1" nth="1">ГЛАВНАЯ</label>
                <div class="tab-item" id="tab-content1">
                    <form v-on:submit.prevent class="form-back_office">
                        <fieldset>
                            <legend>Загрузить логотип</legend>
                            <input type="file" id="filesLogo" ref="files" multiple v-on:change="handleFilesUpload" />
                        </fieldset>

                        <fieldset>
                            <legend>Номер телефона</legend>
                            <input type="text" class="header-menu-num" id="mainText-back_office" v-bind:value="header[0].mainText">
                        </fieldset>

                        <fieldset>
                            <legend>Главное меню</legend>
                            <input type="text" class="header-menu-txt" v-bind:id="item.id" v-for="item in header" v-bind:value="item.mainItem">
                        </fieldset>

                        <fieldset>
                            <legend>Приветственный текст</legend>
                            <input type="text" class="header-menu-title" id="mainText-back_office" v-bind:value="header[0].mainTitle">
                        </fieldset>

                        <fieldset>
                            <legend>Загрузить видео</legend>
                            <input type="file" id="filesVideoBgHeader" ref="files" multiple v-on:change="handleFilesUpload" />
                        </fieldset>
                        <button v-on:click="onChangeHeader">Сохранить</button>
                    </form>
                    <form v-on:submit.prevent class="form-back_office">
                        <fieldset>
                            <legend>Сообщения</legend>
                            <input type="text" id="name">
                            <input type="text" id="email">
                        </fieldset>
                        <button v-on:click="onChangeHeader">Отправить</button>
                    </form>
                </div>

                @*УСЛУГИ*@
                <input type="radio" name="tab" id="tab2" />
                <label class="tab-label no-select" for="tab2" nth="2">УСЛУГИ</label>
                <div class="tab-item" id="tab-content2">
                    <div class="tab-content-back_office">
                        <div class="tab-left-back_office">
                            <div class="block-change-menu_back_office">
                                <form v-on:submit.prevent class="form-back_office">
                                    <fieldset>
                                        <legend>Главный текст</legend>
                                        <input type="text" class="service-main-title" v-bind:value="service[0].mainTitle">
                                    </fieldset>
                                    <fieldset>
                                        <legend>Загрузить фотографию услуги</legend>
                                        <div>
                                            <label v-for="item in service">
                                                Услуга {{ item.orderId }}
                                                <input type="file" id="files" ref="files" multiple v-on:change="handleFilesUpload" />
                                            </label>
                                        </div>
                                    </fieldset>
                                    <button v-on:click="onChangeService">Сохранить</button>
                                </form>
                                <form v-on:submit.prevent class="form-back_office">
                                    <fieldset>
                                        <legend>Название главных услуг</legend>
                                        <label v-for="item in service">
                                            Услуга {{ item.orderId }}
                                            <input type="text" class="service-name" v-bind:value="item.title">
                                        </label>
                                    </fieldset>
                                    <fieldset>
                                        <legend>Описание главных услуг</legend>
                                        <label v-for="item in service">
                                            Описание {{ item.orderId }}
                                            <input type="text" class="service-txt" v-bind:value="item.text">
                                        </label>
                                    </fieldset>
                                    <button v-on:click="onChangeService">Сохранить</button>
                                </form>
                                <form v-on:submit.prevent class="form-back_office">
                                    <fieldset>
                                        <legend>Загрузить доп. услугу в общий список</legend>
                                        <div>
                                            <input type="text" class="service-name" placeholder="Название услуги">
                                            <input type="text" class="service-txt" placeholder="Описание услуги">
                                        </div>
                                    </fieldset>
                                    <button v-on:click="">Принять</button> <br />
                                </form>
                            </div>
                        </div>
                    </div>
                </div>


                @*О НАС*@
                <input type="radio" name="tab" id="tab3" />
                <label class="tab-label no-select" for="tab3" nth="3">О НАС</label>
                <div class="tab-item" id="tab-content3">
                    <form v-on:submit.prevent class="form-back_office">
                        <fieldset>
                            <legend>Загрузить фоновую картинку</legend>
                            <input type="file" id="files" ref="files" multiple v-on:change="handleFilesUpload" />
                        </fieldset>

                        <fieldset>
                            <legend>Главный текст</legend>
                            <input type="text" class="about-menu-txt" v-bind:value="about[0].mainTitle">
                        </fieldset>

                        <fieldset>
                            <legend>Описание</legend>
                            <input type="text" class="header-menu-title" id="mainText-back_office" v-bind:value="about[0].text">
                        </fieldset>

                        <button v-on:click="onChangeHeader">Сохранить</button>
                    </form>
                    <form v-on:submit.prevent class="form-back_office">
                        <fieldset>
                            <legend>Доп. описание</legend>
                            <input type="text" id="name">
                            <input type="text" id="email">
                        </fieldset>
                        <button v-on:click="onChangeHeader">Отправить</button>
                    </form>

                    <form v-on:submit.prevent class="form-back_office">
                        <fieldset>
                            <legend>Кнопка подробной информации</legend>
                            <input type="text" id="name" v-bind:value="about[0].buttonText">
                        </fieldset>
                        <button v-on:click="onChangeHeader">Сохранить</button>
                    </form>
                </div>

                @*СТАТИСТИКА*@
                <input type="radio" name="tab" id="tab4" />
                <label class="tab-label no-select" for="tab4" nth="4">СТАТИСТИКА</label>
                <div class="tab-item" id="tab-content4">
                    <form v-on:submit.prevent class="form-back_office">

                        <fieldset>
                            <legend>Статистика 2</legend>
                            <input type="text" class="stat-menu-txt" v-bind:value="stat[0].number">
                            <input type="text" class="stat-menu-txt" v-bind:value="stat[0].text">
                        </fieldset>

                        <fieldset>
                            <legend>Статистика 3</legend>
                            <input type="text" class="stat-menu-txt" v-bind:value="stat[1].number">
                            <input type="text" class="stat-menu-txt" v-bind:value="stat[1].text">
                        </fieldset>

                        <fieldset>
                            <legend>Статистика 4</legend>
                            <input type="text" class="stat-menu-txt" v-bind:value="stat[2].number">
                            <input type="text" class="stat-menu-txt" v-bind:value="stat[2].text">
                        </fieldset>

                        <button v-on:click="onChangeHeader">Сохранить</button>
                    </form>
                </div>

                @*ПРОЕКТЫ*@
                <input type="radio" name="tab" id="tab5" />
                <label class="tab-label no-select" for="tab5" nth="5">ПРОЕКТЫ</label>
                <div class="tab-item" id="tab-content5">
                    <form v-on:submit.prevent class="form-back_office">
                        <fieldset>
                            <legend>Главный текст</legend>
                            <input type="text" class="project-menu-title" v-bind:value="project[0].mainTitle">
                        </fieldset>

                        <fieldset>
                            <legend>Загрузить картинку проекта 1</legend>
                            <input type="file" id="files" ref="files" multiple v-on:change="handleFilesUpload" />
                        </fieldset>
                        <fieldset>
                            <legend>Загрузить картинку проекта 2</legend>
                            <input type="file" id="files" ref="files" multiple v-on:change="handleFilesUpload" />
                        </fieldset>
                        <fieldset>
                            <legend>Загрузить картинку проекта 3</legend>
                            <input type="file" id="files" ref="files" multiple v-on:change="handleFilesUpload" />
                        </fieldset>

                        <fieldset>
                            <legend>Описание проекта 1</legend>
                            <input type="text" class="header-menu-title" id="mainText-back_office" v-bind:value="project[0].title">
                        </fieldset>
                        <fieldset>
                            <legend>Описание проекта 2</legend>
                            <input type="text" class="header-menu-title" id="mainText-back_office" v-bind:value="project[1].title">
                        </fieldset>
                        <fieldset>
                            <legend>Описание проекта 3</legend>
                            <input type="text" class="header-menu-title" id="mainText-back_office" v-bind:value="project[2].title">
                        </fieldset>

                        <button v-on:click="onChangeHeader">Сохранить</button>
                    </form>

                    <form v-on:submit.prevent class="form-back_office">
                        <fieldset>
                            <legend>Добавить проект в список</legend>
                            <input type="text" id="name">
                            <input type="text" id="email">
                        </fieldset>
                        <button v-on:click="onChangeHeader">Добавить</button>
                    </form>

                    <form v-on:submit.prevent class="form-back_office">
                        <fieldset>
                            <legend>Кнопка подробной информации</legend>
                            <input type="text" id="name" v-bind:value="project[0].buttonText">
                        </fieldset>
                        <button v-on:click="onChangeHeader">Сохранить</button>
                    </form>
                </div>

                <input type="radio" name="tab" id="tab6" />
                <label class="tab-label no-select" for="tab6" nth="6">КЛИЕНТЫ</label>
                <div class="tab-item" id="tab-content6">
                    <form v-on:submit.prevent class="form-back_office">
                        <fieldset>
                            <legend>Главный текст</legend>
                            <input type="text" class="client-menu-title" v-bind:value="client[0].mainTitle">
                        </fieldset>

                        <fieldset>
                            <legend>Загрузить логотип клиента 1</legend>
                            <input type="file" id="files" ref="files" multiple v-on:change="handleFilesUpload" />
                        </fieldset>
                        <fieldset>
                            <legend>Загрузить логотип клиента 2</legend>
                            <input type="file" id="files" ref="files" multiple v-on:change="handleFilesUpload" />
                        </fieldset>
                        <fieldset>
                            <legend>Загрузить логотип клиента 3</legend>
                            <input type="file" id="files" ref="files" multiple v-on:change="handleFilesUpload" />
                        </fieldset>
                        <fieldset>
                            <legend>Загрузить логотип клиента 4</legend>
                            <input type="file" id="files" ref="files" multiple v-on:change="handleFilesUpload" />
                        </fieldset>
                        <fieldset>
                            <legend>Загрузить логотип клиента 5</legend>
                            <input type="file" id="files" ref="files" multiple v-on:change="handleFilesUpload" />
                        </fieldset>
                        <button v-on:click="onChangeHeader">Сохранить</button>
                    </form>

                    <form v-on:submit.prevent class="form-back_office">
                        <fieldset>
                            <legend>Добавить клиента в список</legend>
                            <input type="text" id="name">
                            <input type="text" id="email">
                        </fieldset>
                        <button v-on:click="onChangeHeader">Добавить</button>
                    </form>

                    <form v-on:submit.prevent class="form-back_office">
                        <fieldset>
                            <legend>Кнопка подробной информации</legend>
                            <input type="text" id="name" v-bind:value="client[0].buttonText">
                        </fieldset>
                        <button v-on:click="onChangeHeader">Сохранить</button>
                    </form>
                </div>

                <input type="radio" name="tab" id="tab7" />
                <label class="tab-label no-select" for="tab7" nth="7">КОНТАКТЫ</label>
                <div class="tab-item" id="tab-content7">
                    <form v-on:submit.prevent class="form-back_office">
                        <fieldset>
                            <legend>Главный текст</legend>
                            <input type="text" class="contact-menu-title" v-bind:value="contact[0].mainTitle">
                        </fieldset>

                        <fieldset>
                            <legend>Описание</legend>
                            <input type="text" class="contact-menu-txt" v-bind:value="contact[0].title">
                        </fieldset>

                        <fieldset>
                            <legend>Адрес</legend>
                            <input type="text" class="contact-menu-txt" v-bind:value="contact[1].text">
                        </fieldset>
                        <fieldset>
                            <legend>Почта</legend>
                            <input type="text" class="contact-menu-txt" v-bind:value="contact[2].text">
                        </fieldset>
                        <fieldset>
                            <legend>Телефон</legend>
                            <input type="text" class="contact-menu-txt" v-bind:value="contact[3].text">
                        </fieldset>
                    </form>

                    <form v-on:submit.prevent class="form-back_office">
                        <fieldset>
                            <legend>Кнопка подробной информации</legend>
                            <input type="text" id="name" v-bind:value="contact[0].buttonText">
                        </fieldset>
                        <button v-on:click="onChangeHeader">Сохранить</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/vue/vue.min.js"></script>
    <script src="~/lib/vue/axios/axios.js"></script>
    <script src="~/js/BackOffice.js"></script>
</body>
</html>
