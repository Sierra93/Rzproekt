@{
    Layout = "_Layout";
}
<div class="block main-block">
    <section class="main-block-title">
        <h1>{{ block.title.mainTitle }}</h1>
        <a href="#"><span class="arrow-down"></span></a>
    </section>
</div>

<div class="block service">
    <div class="title-block">
        <h1>{{ block.title.service }}</h1>
    </div>
    <div class="border-bottom-title"></div>
    <section class="service-list">
        <article>
            <img src="~/img/service1.png" alt="service" />
            <h1>{{ service.title1 }}</h1>
            <p>{{ service.txt1 }}</p>
        </article>
        <article>
            <img src="~/img/service2.png" alt="service" />
            <h1>{{ service.title2 }}</h1>
            <p>{{ service.txt2 }}</p>
        </article>
        <article>
            <img src="~/img/service3.png" alt="service" />
            <h1>{{ service.title3 }}</h1>
            <p>{{ service.txt3 }}</p>
        </article>
    </section>
    <div class="btn-detail">
        <a  href="#">{{ general.detailse }}</a>
    </div>
    
</div>

<div class="block about">
    <div class="about-left">
        <div class="about-block-txt">
            <div class="title-block">
                <h1>{{ block.title.about }}</h1>
            </div>
            <div class="border-bottom-title"></div>
            <div class="about-txt">
                <p>{{ about.aboutTxt }}</p>
            </div>
            <div class="btn-detail">
                <a href="#">{{ general.detailse }}</a>
            </div>
        </div>
    </div>
    <div class="about-right"></div>

</div>
<div class="block-counter">
    <div class="counter">
        <div class="numeral">{{ counter.ageCompany.counter }}</div>
        <div class="numeral-detal"><h2>{{ counter.ageCompany.txt }}</h2></div>
    </div>
    <div class="block-border-counter"></div>
    <div class="counter">
        <div class="numeral">{{ counter.projects.counter }}</div>
        <div class="numeral-detal"><h2>{{ counter.projects.txt }}</h2></div>
    </div>
    <div class="block-border-counter"></div>
    <div class="counter">
        <div class="numeral">{{ counter.sertificats.counter }}</div>
        <div class="numeral-detal"><h2>{{ counter.sertificats.txt }}</h2></div>
    </div>
    <div class="block-border-counter"></div>
    <div class="counter">
        <div class="numeral">{{ counter.directActivity.counter }}</div>
        <div class="numeral-detal"><h2>{{ counter.directActivity.txt }}</h2></div>
    </div>
</div>
<div class="block project">
    <div class="title-block">
        <h1>{{ block.title.project }}</h1>
    </div>
    <div class="border-bottom-title"></div>
    <section class="service-list">
    </section>
</div>

<div class="block clients">
    <div class="title-block">
        <h1>{{ block.title.clients }}</h1>
    </div>
    <div class="border-bottom-title"></div>
    <section class="service-list">
    </section>
</div>
<div class="block contacts">
    <div class="title-block">
        <h1>{{ block.title.contacts }}</h1>
    </div>
    <div class="border-bottom-title"></div>
    <section class="service-list">
    </section>
</div>